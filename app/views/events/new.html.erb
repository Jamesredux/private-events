<h1>New Event</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@event) do |f| %>

			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :location %>
			<%= f.text_field :location %>

			
			

			<%= f.label :date  %>
			<%= f.datetime_select :date %>

			<%= f.submit "Create new event", class: "btn btn-primary" %>
	<% end %>	
	</div>
</div>	
