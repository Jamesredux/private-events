<h1>New Event</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@event) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.label :location %>
			<%= f.text_field :location %>

			
			
		<div class="date_input">
			<%= f.label :date  %>
			<%= f.datetime_select :date %>
		</div>	
		
		<div class="check_box">
			<%= f.label "Tick if you will be attending the event." %>
			<%= f.check_box :attendees %> 
		</div>
		<div class="button">
			<%= f.submit "Create new event", class: "btn btn-primary btn-lg" %>
		</div>		
	<% end %>	

	</div>
</div>	
