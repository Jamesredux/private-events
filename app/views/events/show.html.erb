
<div class="container event-details">
	<div class="row">
		<div class="col events-header">
			<h2>Event title: <%= @event.title %></h2>
		</div>
</div>

	<div class="row">
		<div class="col col-md-3">
			Location: <%= @event.location %>
		</div>
		
		<div class="col col-md-3">
			Created by <%= link_to @event.creator.name, @event.creator %>
		</div>

		<div class="col col-md-3">
			Date and Time: <%= @event.date %>
		</div>
</div>

<div class="container event-attendees">
	<div class="row">
		<div class="col">
			<h2>Attendees</h2>
		</div>
	</div>

</div>

<div class="row">
	<div class="col">
		<% if @attendees.any? %>
			<%= will_paginate @attendees %>
			<% @attendees.each do |attendee| %>
			<li><%= link_to attendee.name, attendee %>.</li>
			<% end %>

			<%= will_paginate @attendees %>
	<% end %>

	</div>
</div>

	
		<% if logged_in? && @event.date >= Time.now %>
			<%= render 'add_attendee' %>
		<% end %>
	
